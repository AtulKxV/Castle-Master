<head>
    <title>Cloud Castle | Administrator Login</title>
</head>
<body>
    <div><a href="/">Home</a></div>
    <div id="login_frm" class="card w-50 mx-auto mt-5">
      <div class="card-header">
        <span class="card-title h4">Admin Login</span>
        <br>
        <span class="card-subtitle h6 text-muted">Gain access to your account</span>
      </div>
      <div class="card-body">
        <%- include ('./partials/messages') %>
        <form action="/admins/adminLoginForm" method="POST">
            <div class="form-group">
              <label for="email">Admin-Id: </label>
              <input id="email" class="form-control" type="email" tabindex="1" placeholder="Enter email.." name="email" value="" required>
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input class="form-control" id="password" type="password" tabindex="2" name="password" placeholder="Enter password.." value="" aria-describedby="passwordHelpBlock">
            </div>
          <div class="form-group align-content-right float-right mt-2">
              <input class="btn" type="reset" name="reset" value="Clear">
              <button id="adminLoginBtn" class="btn btn-primary" tabindex="3" type="submit">Login</button>
          </div>
        </form>
        </div>
        <div class="card-footer text-muted font-weight-bolder">
            Quality is not an act, it is a habit.
        </div>
    </div>  

      <!--End of Login-->
</body>