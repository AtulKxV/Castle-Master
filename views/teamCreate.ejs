<div class="container-fuid main-body">
	<div class="container-fuid header_main sticky-top ml-3 py-2">
		<form action="/uploadFile/dashboard" method="GET">
			<div class="input-group">
	        	<button class="input-group-prepend input-group-text border-0 bg-light"><i class="fas fa-search "></i></button>
                <input class="form-control parafont bg-light border-0 searchbar" type="text" placeholder="Search" name="orignalFileName" value="<%= searchOptions.orignalFileName %>">
            	<span class="input-group-append input-group-text p-0 border-0 bg-light headerfont">
					<span class="ml-2 header_main"><%= firstname + '  ' + lastname %></span>
					<a href="/users/profile/edit"><img class="rounded-circle ml-2 mr-2 profile_pic" src="<%= profilePicPath %>" alt="pic"></a>
					<div class="dropdown"><button class="dropdown-toggles fa fa-ellipsis-v header_main fileControlBtn form-control pl-1 py-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
						<div class="dropdown-menu dropdown-menu-right parafont nav-menu w-auto blur-bg">
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/profile">Profile</a>
						  <div class="dropdown-divider"></div>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/profile/edit">Edit Profile</a>
						  <a class="dropdown-item pt-2 mx-3 w-auto disabled href="#">Edit Work Availability</a>
						  <div class="dropdown-divider"></div>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/uploads">My Uploads</a>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/projects">My Projects</a>
						  <div class="dropdown-divider"></div>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/settings">Account Settings</a>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/help">Get Help</a>
						  <div class="dropdown-divider"></div>
						  <a class="dropdown-item pt-2 mx-3 w-auto form-control" href="/users/logout">Sign Out</a>
						</div>
					</div>				
				</span>
            </div>
		</form>
	</div>

	<div class="container-fluid w-100 m-0 p-0 row">
		<div class="container-fluid m-0 mt-4">
			<div class="card-body bg-light center w-75">
				<form action="/createTeam/create" method="POST">					
					<span class="headerfont header_main text-dark p-4 font-weight-bold h4">Create a Team.</span>	
					<hr>
					<br>
					<div class="card-group">
						<div class="form-group card-body">
							<label for="title">Name:</label>
							<input class="form-control border-top-0 border-right-0 border-left-0" type="text" placeholder="Add team title" name="teamName">
						</div>
					</div>
					<div class="card-group">
						<div class="form-group card-body">
							<label for="goals">Goals:</label>
							<textarea class="form-control border-top-0 border-right-0 border-left-0" rows="5" placeholder="Add your team goals (optional)" name="goals"></textarea>
						</div>
					</div>	
					<div class="card-group">
						<div class="form-group card-body">
							<label for="participants">Participants:</label>
							<select name="participants" class="custom-select mb-3" multiple>
								<% users.forEach( Users => { %>	
									<% if (Users.id === participants.id) { %>								
										<option label="<%= Users.email %>" value="<%= Users.email %>" selected>
									<% } else { %>
										<option label="<%= Users.email %>" value="<%= Users.email %>">
									<% } %>
								<% }) %>
							</select>
						</div>
					</div>
					<br>
					<div class="form-group mb-5">
						<button type="submit" class="btn btn-primary float-right">Next</button>
						<a href="/uploadFile/dashboard/projects" type="button" class="btn link float-right">Cancel</a>
					</div>
				</form>
			</div>
		</div>
		
