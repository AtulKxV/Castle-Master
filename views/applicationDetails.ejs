		<div class="modal-body border-0">
			<form action="/admins/adminRegister" method="POST" enctype="multipart/form-data">
				<div class="card-group">
					<div class="form-group card-body mb-0">
					  <label for="firstname">First Name: <span class="text-primary">*</span></label>
					  <input class="form-control" type="text" placeholder="enter your firstname" id="firstname" name="firstname">
					</div>
					<div class="form-group card-body mb-0">
					  <label for="lastname">Last Name: <span class="text-primary">*</span></label>
					  <input class="form-control" type="text" placeholder="enter your lastname" id="lastname" name="lastname" >
					</div>
				  </div>
				  <div class="card-group">
					<div class="form-group card-body mb-0">
					  <label for="lastname">Phone: </label>
					  <input class="form-control" type="number" pattern="[9-8]{2}[9-0]{8}" placeholder="mobile number.." id="phone" name="phone">
					</div>
					<div class="form-group card-body mb-0">
					  <label for="lastname">Company: </label>
					  <input class="form-control" type="text" placeholder="enter company name.." id="company" name="company">
					</div>
				  </div>
				  <!--  Profile Pic Upload  -->
				  <div class="card-group">
					<div class="form-group card-body pt-0 mb-0">
					  <label>Profile Image: <span class="text-primary">*</span></label>
					  <div class="custom-file">
						<input type="file" class="custom-file-input" id="customFile" name="profilePic" required>
						<label class="form-control custom-file-label" for="customFile">Choose file</label>
						<script>
						$(".custom-file-input").on("change", function() {
						  var fileName = $(this).val().split("\\").pop();
						  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
						});
						</script>
					  </div>
					</div>
				  </div>
				  <div class="card-group">
					<div class="form-group card-body mb-0">
					  <label for="lastname">City: </label>
					  <input class="form-control" type="text" placeholder="City  "  id="city" name="city">
					</div>
					<div class="form-group card-body mb-0">
					  <label for="lastname">State/County: </label>
					  <input class="form-control" type="text" placeholder="State/County  " id="state" name="state">
					</div>
				  </div>
				  <div class="card-group">
					<div class="form-group card-body mb-0">
					  <label for="lastname">Postcode: </label>
					  <input class="form-control" type="number" placeholder="Postcode  " id="postcode" name="postcode">
					</div>
					<div class="form-group card-body mb-0">
					  <label for="lastname">Country: </label>
					  <input class="form-control" type="text" placeholder="Country  " id="country" name="country">
					</div>
				  </div>
				  <div class="card-group">
					<div class="form-group card-body pt-0 mb-0">
					  <label for="email">Email: <span class="text-primary">*</span></label>
					  <div class="input-group m-0">
						<input class="form-control" type="email" placeholder="Email" id="email" name="email" onfocusout="checkEmail()">
						<div class="input-group-append">
						  <span class="input-group-text">@example.com</span>
						</div>
					  </div>
					</div>
				</div>
				<small id="jsEmailErrorMessage" class="form-text form-group card-body py-0 my-0 text-danger">
				</small>
				  <div class="card-group">
					<div class="form-group card-body mb-0 w-50 pb-1">
					  <label for="password">Password: <span class="text-primary">*</span></label>
					  <input class="form-control" type="password" placeholder="Create password" id="password" name="password" value=""  aria-describedby="passwordHelpBlock">
					</div>
					<div class="form-group card-body mb-0 pb-1">
					  <br>
					  <input class="form-control mt-2" type="password" placeholder="Confirm" name="password_2" value="" >
					</div>
					<small id="passwordHelpBlock" class="form-text text-muted form-group card-body pt-0 ">
					  Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
					</small>
				  </div>
				  <br>
				  <div class="form-group float-right">
					  <input class="btn" type="reset" name="reset" value="Clear all">
					  <button class="btn btn-primary" type="submit">Create account</button>
				  </div>
			  </form>
			</div>
			<br><br>
	  </form>
	  <script type="application/javascript">
		  $('input[type="file"]').change(function(e){
		  var fileName = e.target.files[0].name;
		  $('.custom-file-label').html(fileName);
		});
	  </script>
  </div>
