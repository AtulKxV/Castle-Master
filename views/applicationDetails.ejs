						<h5 class="card-title">Server Uptime</h5><br>
                        <p class="card-text mx-2">Time:&nbsp; <span id="serverstarttime"></span></p><br>
					</div>
					<script>
						today = '<%= serverUptime %>';
						function startTime() {
							today++
							var h = Math.floor(today / (60*60));
							var m = Math.floor(today % (60*60) / 60);
							var s =  Math.floor(today % 60);
							m = checkTime(m);
							s = checkTime(s);
							document.getElementById('serverstarttime').innerHTML =
							h + ":" + m + ":" + s;
							var t = setTimeout(startTime, 1000);
						}
						function checkTime(i) {
							if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
							return i;
						}
					</script>
